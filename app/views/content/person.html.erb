<% content_for :title, [@publication.honorific_prefix, @publication.title, @publication.honorific_suffix].join(" ") %>

<div class="article-main">
  <article class="article-body">
	<h2><%= @publication.role %></h2>
    <%= @publication.description.html_safe %>
  </article>
</div>

<aside class="article-sidebar">
    <div class="module img-module module-colour-3">
	    <%= image_tag @publication.square, width: "310", alt: @publication.title %>
    </div>
</aside>