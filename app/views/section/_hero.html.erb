<div class="container">
    <div class="row">
        <div class="hero">
            <% if hero_link %>
            <a href="<%= hero_link %>">
            <% end %>
            <%= image_tag hero_image, alt: hero_alt %>
            <% if hero_link %>
            </a>
            <% end %>
            <% if hero_text %>
              <div class="hero-label">
                  <div class="annotation">
                      <%= hero_text.html_safe %>
                  </div>
              </div>
            <% end %>
        </div>
    </div>
</div>

